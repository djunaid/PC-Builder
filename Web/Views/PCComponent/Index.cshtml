<h2>Components</h2>

@model List<PCComponentVM>

<a asp-action="Create" class="btn-primary btn m-4" asp-controller="PCComponent">Create</a>


@if(Model.Count < 0)
{
    <p class="text-info">No Components to show</p>
} 


         <table class="table table-striped"">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var pcCompoent in Model)
                {
                <tr>
                        <td>@pcCompoent.Name</td>
                        <td>@pcCompoent.Type</td>
                        <td>@pcCompoent.Price</td>
                        <td>@pcCompoent.Rating</td>
                </tr>
                }
            </tbody>
        </table>
  


